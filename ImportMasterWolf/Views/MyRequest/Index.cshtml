@model ImportMasterWolf.Models.MyRequest.MultiDocMast
@{
    ViewData["Title"] = "MyRequest | ThaiStanley";
    Layout = "~/Views/Shared/_MenuBar.cshtml";
}

<link href="~/css/MyRequest/siteMyRequest.css" rel="stylesheet" />
<link href="~/css/New/mNew.css" rel="stylesheet" />
@*after document ready*@
<script type="text/javascript">document.onreadystatechange = () => { if (document.readyState === "interactive") { PositionY("MyRequest"); } }</script>

<div class="home-content">
    <div id="DisplayContent" class="content-box">
        <nav class="navbar navbar-expand-lg" style="width: 100%;">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#RequestControl" aria-controls="RequestControl" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="RequestControl">
                <div class="navbar-nav">
                    <div class="d-flex flex-wrap flex-dir-col content-control">
                        <h2 class="control-title">คำร้องของฉัน</h2>
                        <p class="control-title fw-800">จัดเรียง</p>
                        <div class="control-header">
                            <span class="header-title bg-active item filter">
                                <div class="title-text">
                                    <div class="header-icon">
                                        <span class="material-icon-symbols-outlined material-symbols-outlined text-red opacity-dot-7">fiber_manual_record</span>
                                    </div>
                                    ระหว่างดำเนินการ
                                </div>
                            </span>
                            <span class="header-title item bg-trans filter">
                                <div class="title-text">
                                    <div class="header-icon">
                                        <span class="material-icon-symbols-outlined">check_circle</span>
                                    </div>
                                    เสร็จสิ้น
                                </div>
                            </span>
                            <span class="header-title item bg-trans filter">
                                <div class="title-text">
                                    <div class="header-icon">
                                        <span class="material-icon-symbols-outlined">feedback</span>
                                    </div>
                                    ไม่อนุมัติ
                                </div>
                            </span>
                            <span class="header-title item bg-trans filter">
                                <div class="title-text">
                                    <div class="header-icon">
                                        <span class="material-icon-symbols-outlined">draft</span>
                                    </div>
                                    ฉบับร่าง
                                </div>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="content-text">
            <div class="content">
                <div class="search-box result-container wx-100 px-3 ovf-auto-y">
                    @await Html.PartialAsync("_DisplayWaiting", Model)
                </div>
                <!-- Modal ViewDetail -->
                <div class="px-0-im border-rad modal fade" id="modalViewDetail" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
                    <div class="modal-dialog modal-lg">
                        <div class="bd-be-none-rd bd-bw-none-rd modal-content" id="OTModal">
                            <div class="modal-pst-abs-imp px-0-im wx-100 modal-header">
                                <div class="ph-container bg-trans fs-12">
                                    <div class="ph-box px-3">
                                        <div class="ph-item text-gray istep">
                                            <label class="nav-link">
                                                <span>เลือกวันทำงาน</span>
                                            </label>
                                        </div>
                                        <div class="ph-item text-gray istep" style="display: none;">
                                            <span class="material-icon-symbols-outlined">chevron_right</span>
                                            <label href="" class="nav-link">
                                                <span id="DaySelected">สร้างคำร้องขอ</span>
                                            </label>
                                        </div>
                                        <div class="ph-item text-gray istep" style="display: none;">
                                            <span class="material-icon-symbols-outlined">chevron_right</span>
                                            <label href="" class="nav-link">
                                                <span>รายละเอียด</span>
                                            </label>
                                        </div>
                                        <div class="ph-item text-gray istep" style="display: none;">
                                            <span class="material-icon-symbols-outlined">chevron_right</span>
                                            <label href="" class="nav-link">
                                                <span>เลือกพนักงาน</span>
                                            </label>
                                        </div>
                                        <div class="ph-item text-gray istep" style="display: none;">
                                            <span class="material-icon-symbols-outlined">chevron_right</span>
                                            <label href="" class="nav-link">
                                                <span>ส่งถึง</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                @*fake for handheld scaned double enter this foucus*@
                                <button type="button" class="bd-0 bg-trans" aria-label="Close"></button>

                                <button type="button" class="pst-abs right-25px btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="top-75p modal-body">
                                @using (Html.BeginForm("CreateNew", "New", FormMethod.Post, new { id = "formCreateNew" }))
                                {
                                    <div id="modal-new-content" class="modal-new-content">
                                    </div>
                                }
                                </div>
                            <div class="top-72p bg-white bd-ligray bd-be-rd bd-bw-rd modal-pst-inh-imp modal-footer" id="FooterContent"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

